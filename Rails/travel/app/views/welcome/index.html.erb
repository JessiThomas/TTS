<h1>Welcome to my Travel Site!</h1>
<p>This is my very awesome travel site.</p>

<div id="map-canvas"></div>

<table class="table">
  <tr>
    <% @united_states.each do |key,value| %>
	  <th><%= key.titleize %></th>
    <% end %>
  </tr>
  <tr>
    <% @united_states.each do |key,value| %>      
      <% if value.kind_of?(Array) %>
          <td><%= value.join(", ") %></td>
      <% else %>
         <td><%= value %></td>
      <% end %> 
    <% end %>
  </tr>
</table>


<p>Some day I'd like to visit: <strong><%= @homeland %></strong></p>

<ul>
<% @countries.each do |country| %>
  <li><%= country %></li>
<% end %>
</ul>

<% @travel_pics.each do |pics| %>
	<p><%= image_tag pics, class: "img-responsive" %></p>
<% end %>



