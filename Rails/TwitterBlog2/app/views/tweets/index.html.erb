<p id="notice"><%= notice %></p>

<h1>All Tweets</h1>

<div class="row">
        <div class="panel-body">
  <div class="row">
    <% @tweets.each do |tweet| %>
        <div class="panel panel-default">
          <div class="panel-body">
        <h4><%= tweet.message %></h2>
        <h6><%= link_to tweet.user.username, user_profile_path(id: tweet.user.id) %></h3>
        <div class="btn-group">
        <%= link_to 'Show', tweet, class: "btn btn-default" %>
        <%= link_to 'Edit', edit_tweet_path(tweet), class: "btn btn-default" %>
        <%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>
      </div>
      </div>
      </div>
  <% end %>
</div>
</div>
</div>